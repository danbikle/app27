%html(lang="en")
  %head
    %meta(charset="UTF-8")
    %title app27/demo11
    %script(src="/build/react.js")
    %script(src="/build/react-dom.js")
    %script(src="/browser.min.js")
    %script(src="/jquery.min.js")
    %script(src="/d3.v3.min.js")
  %body
    %h1    app27/demo11
    %hr/
    #example example
    %hr/
    #jquery_example1 jquery_example1 
    %hr/
    #d3_example1 d3_example1
    %hr/
    #jquery_example2 jquery_example2 
    %hr/
    #d3_example2 d3_example2
    %hr/
    %script(type="text/babel")
      ReactDOM.render(
      <h1>React says: Hello, world!</h1>,
      document.getElementById('example')
      );
    :javascript
      var jmsg  = ' hello.';
      var d3msg = ' hi too.';
      var jmsg1 = '<h1>jQuery1  says: '+jmsg+ '</h1>';
      var d3msg1= '<h1>D3.js #1 says: '+d3msg+'</h1>';
      var jmsg2 = 'jQuery2  says: '+jmsg;
      var d3msg2= 'D3.js #2 says: '+d3msg;

      jQuery('#jquery_example1').html(jmsg1);

      d3.select('#d3_example1').html(d3msg1);

      jQuery('#jquery_example2')
        .html('');
      jQuery('<h1/>', {text:jmsg2}).appendTo('#jquery_example2');

      d3.select('#d3_example2')
        .html('')
        .append('h1')
        .text(d3msg2);
